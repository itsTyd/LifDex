{
  "name": "lifdex",
  "version": "0.0.0",
  "description": "A desktop app for Lifx lights",
  "main": "./src/main.js",
  "scripts": {
    "build": "npm run clean && webpack --config webpack.config.js",
    "electron": "electron ./dist/main.js",
    "start": "npm run build -- --mode=production && npm run electron",
    "start:dev": "npm run build -- --mode=development && webpack-dev-server --mode=development --config webpack.config.js",
    "clean": "rimraf ./dist/ && rimraf ./.awcache/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itsTyd/LifDex.git"
  },
  "keywords": [
    "lifx",
    "desktop"
  ],
  "author": "Daniel Sousa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/itsTyd/LifDex/issues"
  },
  "homepage": "https://github.com/itsTyd/LifDex#readme",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "awesome-typescript-loader": "^5.2.1",
    "css-loader": "^3.1.0",
    "electron": "^9.4.0",
    "electron-cgi": "0.0.3",
    "eslint": "^6.5.1",
    "eslint-plugin-react": "^7.15.1",
    "html-webpack-plugin": "^5.5.0",
    "node-sass": "^4.12.0",
    "prettier-eslint": "^9.0.0",
    "rimraf": "^3.0.0",
    "sass-convert": "^0.5.2",
    "sass-loader": "^7.3.1",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "typescript": "^3.5.3",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.7.2"
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}
